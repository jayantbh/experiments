{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "jsRules": {},
    "rules": {
      "quotemark": [true, "single"],
      "interface-name": [false],
      "jsx-no-multiline-js": [false],
      "indent": [true, "spaces", 2],
      "object-literal-sort-keys": false,
      "curly": false,
      "no-empty": false,
      "arrow-parens": false,
      "jsx-no-lambda": false,
      "trailing-comma": [
        true,
        {
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          }
        }
      ]
    },
    "rulesDirectory": []
}
